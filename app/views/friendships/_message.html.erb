<%= simple_form_for [@friendship, @friendship_message],
  html: {class: "d-flex"} do |f|
%>
  <% other_user = current_user == @friendship.asker ? @friendship.reciever :  %>
  <%= f.input :content,
    label: false,
    placeholder: "Message #{other_user.nick_name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
