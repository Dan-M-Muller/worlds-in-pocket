<div class="container mt-3">
  <h1>Todos os grupos de jogos</h1>
  <hr>

  <div class="container" style="width: 60rem;">
    <div class="card-grid">
      <% @games.each do |g| %>
        <div class="">
          <div class="card mb-3">
            <div class="card-header">
              <%= link_to g.name, game_path(g) %>
            </div>
            <div class="card-body">
              <p><%= g.description %></p>
            </div>
            <div class="card-footer">
              Classificação: <%= g.pg %>
              Narrador: <%= g.user.nick_name %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
