<div class="container mt-4">
  <%= simple_form_for(@game) do |f| %>
    <%= f.input :name, label: "New Name:", placeholder: @game.name %>
    <%= f.input :description, label: "New Description:", placeholder: @game.description %>
    <%= f.button :submit, class: "btn btn-ghost m-2" %>
  <% end %>
</div>
